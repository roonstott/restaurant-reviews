@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;

<h2>Cuisines</h2>

@if (Model.Count == 0) 
{
  <p>No cuisines have been added yet</p>
}

<ul>
@foreach(Cuisine cuisine in Model) 
{
  <li>@Html.ActionLink(@cuisine.Name, "Details", new {id = cuisine.CuisineId})</li>
}
</ul>

@Html.ActionLink("Add a cuisine", "Create")

@Html.ActionLink("Add a restaurant", "Restaurants", "Create");
