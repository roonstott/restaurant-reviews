@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Cuisine
@using BestRestaurant.Models

<h1>@Model.Name</h1>

@if (Model.Restaurants.Count == 0) 
{
  <p>There are no restauants in this cuisine</p>
}

@foreach (Restaurant restaurant in Model.Restaurants) 
{
  @Html.ActionLink(@restaurant.Name, "Details", "Restaurants", new {id = restaurant.RestaurantId})<br>
}



@Html.ActionLink($"Add a {Model.Name} restaurant", "Create", "Restaurants")

@Html.ActionLink("All Cuisines", "Index", "Cuisines")
